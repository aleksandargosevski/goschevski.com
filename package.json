{
  "scripts": {
    "deploy": "npm run clean && npm run build && gh-pages -d dist",
    "build": "npm run clean && npm run css && npm run images && npm run images && npm run static && npm run html:generate && npm run html:minify",
    "clean": "rm -rf dist",
    "css": "postcss src/css/style.css -o dist/style.css",
    "images": "imagemin src/images/* --out-dir=dist",
    "static": "cp src/static/* dist",
    "html:generate": "eleventy",
    "html:minify": "html-minifier --use-short-doctype --remove-comments --collapse-whitespace --input-dir dist --output-dir dist --file-ext html",
    "dev": "npm run watch & browser-sync start --server 'dist' --files 'dist'",
    "watch:css": "onchange src/css/**/* -- npm run css",
    "watch:images": "onchange src/images/**/* -- npm run images",
    "watch:static": "onchange src/static/**/* -- npm run static",
    "watch:content": "onchange src/content/**/* -- npm run html:generate",
    "watch:templates": "onchange src/templates/**/* -- npm run html:generate",
    "watch": "npm run watch:css & npm run watch:images & npm run watch:static & npm run watch:content & npm run watch:templates",
    "lint": "textlint src/content/**/*.md"
  },
  "devDependencies": {
    "@11ty/eleventy": "0.11.1",
    "browser-sync": "2.26.13",
    "cssnano": "4.1.10",
    "gh-pages": "3.1.0",
    "imagemin-cli": "6.0.0",
    "nunjucks": "3.2.2",
    "onchange": "7.1.0",
    "postcss": "8.2.1",
    "postcss-cli": "8.3.1",
    "postcss-import": "14.0.0",
    "postcss-preset-env": "6.7.0",
    "textlint": "11.7.6",
    "textlint-rule-en-capitalization": "2.0.3",
    "textlint-rule-rousseau": "1.4.6",
    "textlint-rule-write-good": "1.6.2"
  },
  "dependencies": {
    "html-minifier": "^4.0.0"
  }
}
