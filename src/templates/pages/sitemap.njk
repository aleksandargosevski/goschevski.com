<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for item in collections.all %}
{%- if item.data.sitemapIgnore !== true %}
  <url>
    <loc>{{ item.url | fullUrl }}</loc>
    <lastmod>{{ item.date | toISOString }}</lastmod>
    <changefreq>{{ item.data.changefreq or "yearly" }}</changefreq>
    <priority>{{ item.data.priority or 0.5 }}</priority>
  </url>
{%- endif %}
{%- endfor %}
</urlset>
